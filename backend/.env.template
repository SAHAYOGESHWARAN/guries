# =====================================================
# Marketing Control Center - Backend Environment Variables
# =====================================================
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to version control

# Server Configuration
NODE_ENV=development
PORT=3001
API_PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcc_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_CLIENT=sqlite

# Admin Credentials (CHANGE THESE IMMEDIATELY!)
# Use strong passwords with uppercase, lowercase, numbers, and special characters
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=SecurePassword123!

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-$(date +%s)
JWT_EXPIRES_IN=7d

# Twilio (for SMS/Voice) - Optional
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
SOCKET_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload
MAX_FILE_SIZE=100mb
UPLOAD_DIR=./public/uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# API Keys (Optional)
OPENAI_API_KEY=your_openai_api_key
GOOGLE_ANALYTICS_KEY=your_ga_key
GOOGLE_GENAI_API_KEY=your_google_genai_key

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here_$(date +%s)

# Deployment
VERCEL_URL=https://your-domain.vercel.app
