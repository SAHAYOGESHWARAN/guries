{
  "name": "guires-marketing-control-center",
  "private": true,
  "version": "2.5.0",
    "engines": {
    "node": "24.x"
  },
  "scripts": {
    "setup": "node setup-env.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:all",
    "build:all": "npm run build:api && npm run build:frontend && npm run build:backend",
    "build:api": "cd api && npm install && npx tsc",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "cd backend && npm install && npm run build",
    "prebuild": "npm run build:api",
    "preview": "cd frontend && npm run preview",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../api && npm install",
    "vercel-build": "npm run build:all"
  },
  "dependencies": {
    "@vercel/node": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "jws": "^4.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "qs": "^6.14.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "tough-cookie": "^6.0.0",
    "twilio": "^4.23.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "@upstash/redis": "^1.36.0",
    "typescript": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2"
  }
}