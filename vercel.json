{
  "version": 2,
  "buildCommand": "cd frontend && npm install --legacy-peer-deps && npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "frontend/dist",
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "/api/v1",
    "USE_PG": "true"
  },
  "functions": {
    "api/v1/index.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/backend-proxy.ts": {
      "memory": 512,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/api/v1/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/backend-proxy.ts"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/backend-proxy.ts"
    },
    {
      "src": "/index\\.[a-z0-9]+\\.js",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/style\\.[a-z0-9]+\\.css",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*\\.js",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*\\.css",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}