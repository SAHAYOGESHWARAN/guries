{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps && cd backend && npm install --legacy-peer-deps && npm run build && cd ../frontend && npm install --legacy-peer-deps && npm run build && cd ..",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "frontend/dist",
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "/api/v1",
    "PORT": "3001",
    "API_PORT": "3001"
  },
  "functions": {
    "api/backend-proxy.ts": {
      "memory": 3008,
      "maxDuration": 60,
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/backend-proxy.ts"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/backend-proxy.ts"
    },
    {
      "src": "/index\\.[a-z0-9]+\\.js",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/style\\.[a-z0-9]+\\.css",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*\\.js",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*\\.css",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}