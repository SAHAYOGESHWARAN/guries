{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps && cd frontend && npm install --legacy-peer-deps && npm run build && cd ..",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": "frontend/dist",
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "/api/v1"
  },
  "routes": [
    {
      "src": "/index\\.[a-z0-9]+\\.js",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/style\\.[a-z0-9]+\\.css",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*\\.js",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*\\.css",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}