{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist_api",
    "rootDir": ".",
    "jsx": "react-jsx"
  },
  "include": [
    "api/**/*.ts",
    "api/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "backend/dist",
    "frontend/dist"
  ]
}
